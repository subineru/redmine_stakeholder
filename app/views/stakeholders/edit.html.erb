<h2><%=l(:label_stakeholder_edit)%></h2>

<%= labelled_form_for @stakeholder,
                      url: project_stakeholder_path(@project, @stakeholder),
                      method: :put,
                      html: { class: 'stakeholder-form' } do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= submit_tag l(:button_save) %>
  <%= link_to l(:button_cancel), project_stakeholders_path(@project) %>
<% end %>
