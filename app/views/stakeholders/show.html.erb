<div class="contextual">
  <%= link_to l(:button_edit),
              edit_project_stakeholder_path(@project, @stakeholder),
              class: 'icon icon-edit' if User.current.allowed_to?(:manage_stakeholders, @project) %>
  <%= link_to l(:label_change_history),
              history_project_stakeholder_path(@project, @stakeholder),
              class: 'icon icon-history' if User.current.allowed_to?(:view_stakeholders, @project) %>
  <%= link_to l(:button_delete),
              project_stakeholder_path(@project, @stakeholder),
              method: :delete,
              data: { confirm: l(:text_are_you_sure) },
              class: 'icon icon-del' if User.current.allowed_to?(:manage_stakeholders, @project) %>
</div>

<h2><%=l(:label_stakeholder)%>: <%= h(@stakeholder.name) %></h2>

<div class="stakeholder-details">
  <div class="splitcontentleft">
    <p>
      <strong><%=l(:field_id)%>:</strong>
      <span title="Global ID: <%= @stakeholder.id %>"><%= @stakeholder.project_sequence_number %></span>
    </p>
    <p>
      <strong><%=l(:field_stakeholder_name)%>:</strong>
      <%= h(@stakeholder.name) %>
    </p>
    <p>
      <strong><%=l(:field_title)%>:</strong>
      <%= h(@stakeholder.title) %>
    </p>
    <p>
      <strong><%=l(:field_location_type)%>:</strong>
      <%= @stakeholder.location_type_label %>
    </p>
    <p>
      <strong><%=l(:field_project_role)%>:</strong>
      <%= h(@stakeholder.project_role) %>
    </p>
    <p>
      <strong><%=l(:field_power)%>:</strong>
      <%= @stakeholder.power_label %>
    </p>
    <p>
      <strong><%=l(:field_interest)%>:</strong>
      <%= @stakeholder.interest_label %>
    </p>
  </div>

  <div class="splitcontentright">
    <p>
      <strong><%=l(:field_primary_needs)%>:</strong>
      <%= simple_format(h(@stakeholder.primary_needs)) %>
    </p>
    <p>
      <strong><%=l(:field_expectations)%>:</strong>
      <%= simple_format(h(@stakeholder.expectations)) %>
    </p>
    <p>
      <strong><%=l(:field_participation_degree)%>:</strong>
      <%= @stakeholder.participation_degree_label %>
    </p>
  </div>
</div>

<div class="clear"></div>

<p>
  <%= link_to l(:label_stakeholder_plural), project_stakeholders_path(@project) %>
</p>
